{
    "plugin": [
        "stylelint-scss"
    ],
    "extends": [
        "stylelint-config-recommended-scss",
        "stylelint-config-recess-order",
        "stylelint-rscss/config",
        "stylelint-config-prettier"
    ],
    "rules": {
        "max-nesting-depth": [
        1,
        {
            "ignore": ["pseudo-classes"],
            "ignoreAtRules": ["include"],
            "block-no-empty": null,
            "unit-whitelist": ["em", "rem", "s"]
        }
    ]
    }
  }